# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=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

# LLM Model Configuration
# Using kimi-k2-thinking as specified in Eternal Hive architecture
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Optional: Custom API endpoint (defaults to https://openrouter.ai/api/v1)
# OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Logging
RUST_LOG=info

# Database (optional - defaults to sqlite://data/jamey.db)
# DATABASE_URL=sqlite://data/jamey.db

# MQTT Configuration (optional - for message-based communication)
# Broker connection
MQTT_BROKER_URL=mqtt://localhost
MQTT_PORT=8883

# TLS certificates (required for secure connection)
# Place your certificates in the certs/ directory
MQTT_TLS_CA_CERT=./certs/ca.crt
MQTT_TLS_CLIENT_CERT=./certs/client.crt
MQTT_TLS_CLIENT_KEY=./certs/client.key

# Authentication
# Generate a strong random secret (minimum 32 characters)
MQTT_JWT_SECRET=your-secret-key-here-minimum-32-characters-required-for-security

# JWT token lifetime in seconds (default: 300 = 5 minutes)
MQTT_JWT_LIFETIME_SECONDS=300

# Client settings
MQTT_CLIENT_ID=jamey-instance-1
MQTT_KEEP_ALIVE_SECONDS=60
MQTT_MAX_PACKET_SIZE=268435456
MQTT_CONNECTION_TIMEOUT_SECONDS=30

# Topic permissions (comma-separated list of allowed topic patterns)
# Use + for single-level wildcard, # for multi-level wildcard
# Default: jamey/# (allow all jamey topics)
MQTT_PERMISSIONS=jamey/#,jamey/+/query,jamey/events/#

# Soul Knowledge Base Configuration
SOUL_DEFAULT_TRUST=0.5
SOUL_BASE_DECAY_RATE=0.01
SOUL_PRUNE_THRESHOLD=0.1
SOUL_EMPATHY_THRESHOLD=0.7
SOUL_AUTO_RECORD=true
